.search-bar {
	position: relative;
	padding: 10px;
	box-sizing: border-box;
	-webkit-text-size-adjust: 100%;
	-webkit-box-align: center;
}

.search-bar__form {
	position: relative;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-align-items: center;
	align-items: center;
	border-radius: 4px;
	background: #1a1a1d;
}

.search-bar__box {
	position: relative;
	padding-left: 32px;
	padding-right: 32px;
	-webkit-box-flex: 1;
	-webkit-flex: auto;
	flex: auto;
	box-sizing: border-box;
	z-index: 1;
}

.search-bar__input {
	height: 32px;
	line-height: 32px;
	font-size: 14px;
	caret-color: #07c160;
	margin-left: 2px;
}

.search-bar__speak-btn {
	margin-left: 8px;
	line-height: 32px;
	color: #576b95;
	white-space: nowrap;
}

.icon-search_in-box {
	position: absolute;
	left: 12px;
	top: 50%;
	margin-top: -7px;
}

.icon-clear {
	position: absolute;
	top: 10px;
	right: 0;
	bottom: 0;
	padding: 0 12px;
	font-size: 0;
}

.icon-clear:after {
	content: "";
	height: 100%;
	vertical-align: middle;
	display: inline-block;
	width: 0;
	overflow: hidden;
}

.icon-speak {
	height: 20px;
	width: 20px;
	margin-right: 8px;
	vertical-align: top;
	margin-top: .4em;
	line-height: 1em;
}